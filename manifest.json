{
  "manifest_version": 3,
  "name": "Taggle",
  "version": "1.5.0",
  "description": "Type a prompt in any textbox (Ctrl/Cmd+Space) and save webpage text to @tags via right-click.",
  "permissions": ["activeTab", "scripting", "contextMenus", "storage", "identity"],
  "oauth2": {
    "client_id": "713365663850-30s2icpvqori18a3k3ilru9mia53iacf.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Taggle"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "Open Taggle popup"
    }
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["rag-system.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/pdf.worker.min.js", "lib/pdf.min.js", "lib/pdf-loader.js", "folder-watcher.js", "calendar-service-v3.js", "calendar-sync.js", "rag-system.js", "gc-logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
